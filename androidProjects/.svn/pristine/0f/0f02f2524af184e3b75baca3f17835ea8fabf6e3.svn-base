<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="tab_main_style">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/tb_textcolor_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="tags_btn" parent="android:Widget">
        <item name="android:scaleType">center</item>
        <item name="android:background">@null</item>
    </style>

    <style name="header_btn_left">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="header_centent_title">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="header_btn_right">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="header_search">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="line_left_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="line_right_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/dddarkgray</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="btn_no_boarder">
        <item name="android:scaleType">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="txt_clickable">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/clickable_textcolor_selector</item>
    </style>

    <style name="txt_button_narrow">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/clickable_textcolor_selector</item>
        <item name="android:background">@drawable/preference_single_item</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">82dp</item>
        <item name="android:layout_marginRight">82dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="btn_plan_green">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/clickable_textcolor_white_selector</item>
        <item name="android:background">@drawable/btn_plan_green</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

