<?xml version="1.0" encoding="utf-8"?>
<com.kyzyinc.android.kidstutor.ListItemMessageInfo xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/preference_single_item"
    android:paddingRight="0dp"
    android:paddingLeft="0dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/img_main"
        android:src="@drawable/avatar"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:contentDescription="@string/blank"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/def_title"
        android:id="@+id/txt_title"
        android:layout_toRightOf="@+id/img_main"
        android:singleLine="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/def_time"
        android:id="@+id/txt_time"
        android:textColor="@color/firebrick"
        android:layout_below="@+id/txt_cash"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:gravity="right" />

</com.kyzyinc.android.kidstutor.ListItemMessageInfo>