<?xml version="1.0" encoding="utf-8"?>
<app.smarthome.zzd.smarthome.view.ListItemSocketKwh
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="64dp"
    android:background="@drawable/list_item_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_main"
        android:src="@drawable/socket_on_small"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:contentDescription="@string/blank"
        android:layout_centerVertical="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/def_title"
        android:id="@+id/txt_title"
        android:singleLine="true"
        android:textColor="@color/dddarkgray"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_main"
        android:layout_toEndOf="@+id/img_main"
        android:layout_marginLeft="18dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right_gray"
        android:id="@+id/img_arror_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/def_title"
        android:id="@+id/txt_kwh"
        android:singleLine="true"
        android:textColor="@color/darkgray"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txt_bottom_line"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="1dp"
        android:background="@color/llightgray" />

</app.smarthome.zzd.smarthome.view.ListItemSocketKwh>