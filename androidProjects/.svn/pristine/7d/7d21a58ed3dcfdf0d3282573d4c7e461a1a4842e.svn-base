<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include
        android:id="@+id/ly_header"
        layout="@layout/header"
       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="35dp">

        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/txt_setting_electric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="@string/electric_money"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edit_setting_electric"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt_setting_electric"
                android:background="@color/white"
                android:gravity="center"
                android:hint="@string/electric_money_hint"
                android:inputType="numberDecimal"
                android:textColorHint="@color/setting_electric"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:text="@string/electric_unit" />

            <TextView
                android:id="@+id/txt_select_electric"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/textView3"
                android:background="@color/white"
                android:gravity="center"
                android:text="千瓦时"
                android:textColor="@color/black"
                android:textSize="18sp" />




        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
