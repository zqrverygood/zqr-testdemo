<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <Button
            android:id="@+id/btn_close"
            android:textSize="13dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/tab_font_on"
            android:background="@drawable/dialog_btn_close"
            android:text="@string/dialog_btn_close"
            android:layout_width="58dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/btn_ok"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:background="@drawable/dialog_btn_ok"
            android:text="@string/dialog_btn_ok"
            android:layout_width="58dp"
            android:layout_height="28dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_line" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <app.smarthome.zzd.smarthome.view.PickerView
                android:id="@+id/pickerview_year"
                android:layout_width="80dp"
                android:layout_height="160dp" />

            <app.smarthome.zzd.smarthome.view.PickerView
                android:id="@+id/pickerview_month"
                android:layout_width="80dp"
                android:layout_height="160dp"
                android:layout_marginLeft="15dp" />

            <app.smarthome.zzd.smarthome.view.PickerView
                android:id="@+id/pickerview_day"
                android:layout_width="80dp"
                android:layout_height="160dp"
                android:layout_marginLeft="15dp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
