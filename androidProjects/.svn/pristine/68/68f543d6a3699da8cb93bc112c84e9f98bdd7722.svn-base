<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/signup_title"
        android:id="@+id/txt_tip_deposit_to"
        android:layout_gravity="center"
        android:textColor="#ff5e4909" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/edit_account"
            android:layout_gravity="center_horizontal"
            android:hint="@string/hint_account" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="0.06"
        android:id="@+id/ly_vcode"
        android:visibility="visible">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edit_vcode"
            android:hint="@string/hint_vcode"
            android:layout_alignBottom="@+id/ly_tmp_vcode"
            android:layout_marginBottom="-6dp" />

        <RelativeLayout
            android:id="@+id/ly_tmp_vcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/animGetVCode"
                android:contentDescription="@string/nothing"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈哈"
                android:id="@+id/btn_get_vcode"/>

        </RelativeLayout>


    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edit_password"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:hint="@string/hint_password"
        android:inputType="textVisiblePassword"
        android:layout_marginTop="10dp"
        android:password="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:gravity="bottom"
        android:id="@+id/ly_password_confirm">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edit_password_confirm"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:hint="@string/hint_password_confirm"
            android:inputType="textVisiblePassword"
            android:layout_marginTop="10dp"
            android:password="true" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:gravity="center"
        android:id="@+id/ly_agree_term">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/agree_to_term"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textColor="#ff232323"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/service_term"
            android:id="@+id/txt_service_term"
            android:layout_marginLeft="6dp"
            android:textColor="@color/clickable_textcolor_selector"
            android:gravity="center_vertical" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/animSubmit"
            android:contentDescription="@string/nothing"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:id="@+id/btn_submit"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:textSize="18sp"
            android:textColor="@color/clickable_textcolor_selector"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/nothing"
            android:id="@+id/btn_close"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/has_account_to_login"
            android:id="@+id/txt_change_scene"
            android:textColor="@color/clickable_textcolor_selector"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/btn_close"
            android:layout_toEndOf="@+id/btn_close"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/forget_password"
            android:id="@+id/txt_forget_pwd"
            android:textColor="@color/clickable_textcolor_dark_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:gravity="center_vertical" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>