<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:text=""
        android:background="@color/lllightgrey" />

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="40dp"
        android:id="@+id/ly_room_title"
        android:background="@drawable/clickable_line_white_blue">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/img_left"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="32dp"
            android:contentDescription="@string/blank"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:src="@drawable/arrow_up_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/def_title"
            android:id="@+id/txt_title"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_marginLeft="24dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_left"
            android:layout_toEndOf="@+id/img_left"
            android:layout_marginStart="24dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ly_devices"
        android:visibility="visible"></LinearLayout>

</LinearLayout>
