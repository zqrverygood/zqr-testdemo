    static Vector<Long> GetDeviceIdByGatewayId(long lGatewayId){
        Vector<Long> ret = new Vector<>();
        for (DeviceInfo d : mDevices.values()){
            if (d.mSuperDevId == lGatewayId){
                ret.add(Long.valueOf(d.mId));
            }
        }
        return ret;
    }

